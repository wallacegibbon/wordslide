{
  "name": "wordslide",
  "version": "0.1.5",
  "manifest_version": 2,
  "icons": {
    "64": "img/icon_64.png",
    "128": "img/icon_128.png"
  },
  "background": {
    "page": "html/background.html"
  },
  "browser_action": {
    "default_title": "Configure wordslide",
    "default_icon": "img/icon_32.png",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/custom.css"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "*://*/",
    "webRequest",
    "storage",
    "notifications"
  ]
}